@model dynamic
@if (Url.Action("Index").Equals(Request.Url.AbsolutePath, StringComparison.OrdinalIgnoreCase))
{
    <ol class="breadcrumb">
        <li class="active">@ViewBag.Title</li>
    </ol>
}
else
{
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index")">Samples</a></li>
        <li class="active">@ViewBag.Title</li>
    </ol>
}