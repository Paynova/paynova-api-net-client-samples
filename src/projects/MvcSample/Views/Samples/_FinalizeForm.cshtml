@model Finalizable

@using (Html.BeginForm("Finalize", "Samples"))
{
    <fieldset>
        <legend>Payment (Card: @Model.Meta.CardFirstSix ... @Model.Meta.CardLastFour) @Model.Amount @Model.Meta.CurrencyCode</legend>
        <div class="form-group">
            @Html.MyLabelFor(m => m.TransactionId)
            @Html.MyTextBoxFor(m => m.TransactionId)
            <p class="help-block">Transaction Id for previously initialized payment. Generated by Paynova.</p>
        </div>
        <div class="form-group">
            @Html.MyLabelFor(m => m.OrderId)
            @Html.MyTextBoxFor(m => m.OrderId)
            <p class="help-block">Paynova's unique order id for the order to which this payment belongs</p>
        </div>
        <div class="form-group">
            @Html.MyLabelFor(m => m.Amount)
            @Html.MyTextBoxFor(m => m.Amount)
            <p class="help-block">Amount for previously initialized payment.</p>
        </div>
    </fieldset>
    <button type="submit" class="btn btn-block btn-primary">Finalize</button>
    @Html.AntiForgeryToken()
}
