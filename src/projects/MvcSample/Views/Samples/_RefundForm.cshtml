@model Refundable

@using (Html.BeginForm("Refund", "Samples"))
{
    if (Model.Meta != null)
    {
    <fieldset>
        <legend>Order number @Model.Meta.OrderNumber</legend>
        <div class="form-group">
            @Html.MyLabelFor(m => m.TransactionId)
            @Html.MyTextBoxFor(m => m.TransactionId)
            <p class="help-block">Transaction Id for previously initialized payment. Generated by Paynova.</p>
        </div>
        <div class="form-group">
            @Html.MyLabelFor(m => m.Meta.PaymentMethod)
            @Html.MyTextBoxFor(m => m.Meta.PaymentMethod)
        </div>
        <div class="form-group">
            @Html.MyLabelFor(m => m.TotalAmount)
            @Html.MyTextBoxFor(m => m.TotalAmount)
            <p class="help-block">Total amount to refund.</p>
        </div>
    </fieldset>
    }
    
    @Html.AntiForgeryToken()
    <button class="btn btn-danger btn-block">Refund</button>
}